        <servlet-class>com.mycompany.librarymanagement.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.mycompany.librarymanagement.controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBooks</servlet-name>
        <servlet-class>com.mycompany.librarymanagement.controller.AddBooks</servlet-class>
    </servlet>
    <servlet>
